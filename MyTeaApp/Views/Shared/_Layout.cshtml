@using Microsoft.AspNetCore.Identity;

@inject SignInManager<User> _sm;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyTeaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyTeaApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <partial name="_NavbarPartial" />
    </header>
    <div class="@(_sm.IsSignedIn(User) ? "container-fluid" : "container")">
        @if (TempData["ToasterType"] != null)
        {
            Html.RenderPartial("~/Views/Partials/_NotificationPartial.cshtml", (string)TempData["ToasterType"]);
        }


        @if(_sm.IsSignedIn(User)){
            <main class="row">
                    <partial name="_SideMenuPartial"></partial>
                @RenderBody()
            </main>
        }
        else
        {
            @RenderBody()
        }
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyTeaApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>
    body {
        font-family: 'Arial', sans-serif !important;
    }

    .title {
        font-weight: bold;
        color: #0097B2 !important;
    }

    .color-blue{
        color: #0097B2;
    }

    .btn-danger {
        background-color: #DC4C64 !important;
        border-color: #DC4C64 !important;
        color: white !important;
        transition: 0.6s;
        font-weight: 600;
    }

    .btn-danger:hover {
            background-color: #DC4C64 !important;
            border-color: #DC4C64 !important;
    }

    .btn-outline-danger {
        color: #DC4C64 !important;
        transition: 0.6s;
        border-color: #DC4C64 !important;
    }

    .btn-outline-danger:hover {
        color: white !important;
            border-color: #DC4C64 !important;
            background-color: #DC4C64 !important;
    }
    .clear {
        color: #DC4C64;
        font-family: 'Arial', sans-serif !important;
        font-size: 0.9rem;
    }

    .clear:hover {
        color: #0097B2;
    }

    .btn-outline-info {
        color: #0097B2 !important;
        transition: 0.6s;
        border-color: #0097B2 !important;
    }

    .btn-outline-info:hover {
        color: white !important;
        border-color: #0097B2 !important;
        background-color: #0097B2 !important;
    }

    .btn-info {
        background-color: #0097B2 !important;
        border-color: #0097B2 !important;
        color: white !important;
        transition: 0.6s;
        font-weight:600;
    }

    .btn-info:hover {
        background-color: #05b0cf !important;
        border-color: #05b0cf !important;
    }
</style>