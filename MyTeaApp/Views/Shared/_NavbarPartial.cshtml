@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> _signInManager;

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            <img src="~/assets/logoMyTea.png" alt="Logo" width="50" height="44" class="d-inline-block align-text-top">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="AdminOverview">Dashboard</a>
                    </li>
                }
                else if (User.IsInRole("Employee"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="EmployeeOverview">Dashboard</a>
                    </li>
                } else if (User.IsInRole("Manager")) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="ManagerOverview">Dashboard</a>
                    </li>
                }
            </ul>
            <partial name="_NavbarLoginPartial" />
        </div>
    </div>
</nav>