@model IEnumerable<MyTeaApp.Models.Department>

@{
    ViewData["Title"] = "Department";
}
<div class="col">
    <h1 class="title">Departments</h1>
    <p>
        <a asp-action="Create" class="btn btn-outline-info">Create New</a>
    </p>

    <form asp-controller="Departments" asp-action="Index" method="get" class="my-4">
            <label class="form-label">Search</label>
            <input type="text" value="@TempData["SearchString"]" class="" name="searchString" />

            <input type="submit" class="btn btn-info" value="Filter" />
            <a class="clear text-decoration-none" asp-action="Index" asp-controller="Departments">Clear</a>
    </form>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() == 0)
            {
                <td colspan="3" class="text-center">No items to display</td>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="text-decoration-none me-3 color-blue" asp-route-id="@item.DepartmentID">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="text-decoration-none clear">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
