@model IEnumerable<MyTeaApp.Models.WBS>

@{
    ViewData["Title"] = "Index";
}

<div class="col">

    <h1 class="title">WBS</h1>

    <p>
        <a class="btn btn-outline-info mt-3" asp-action="Create">Create New</a>
    </p>

    <form asp-controller="WBS" asp-action="Index" method="get">

        <p>
            <input type="text" name="filtroWbs" placeholder="Search Title"/>
            <input class="btn btn-sm btn-outline-info mr-3 ml-3" type="submit" value="Filter" />
            <a class="btn btn-sm btn-outline-info" asp-action="Index">Clear</a>
        </p>
    </form>


    @if (TempData["ToasterType"] != null)
    {
        Html.RenderPartial("~/Views/Partials/_NotificationPartial.cshtml", (string)TempData["ToasterType"]);
    }


    <table class="table">
        <thead>
            <tr>
                <th class="title">
                    @Html.DisplayNameFor(model => model.WbsName)
                </th>
                <th class="title">
                    @Html.DisplayNameFor(model => model.WbsCod)
                </th>
                <th class="title">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="title">
                    @Html.DisplayNameFor(model => model.IsChargeable)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WbsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WbsCod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsChargeable)
                </td>
                <td>
                        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.WbsId"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.WbsId"><i class="bi bi-info-circle"></i></a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.WbsId"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>

</div>

<style>
    body {
        font-family: 'Arial', sans-serif !important;
    }

    .title {
        font-weight: bold;
        color: #0097B2 !important;
    }
</style>